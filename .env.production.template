# Production Environment Configuration for Render
# Copy this content and set these variables in your Render dashboard

APP_NAME=libraFlow
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_FOR_PRODUCTION
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com

# Database Configuration (Render will provide these)
DB_CONNECTION=pgsql
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

# Session and Cache Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_DRIVER=redis
CACHE_PREFIX=libraflow_cache

# Queue Configuration
QUEUE_CONNECTION=database

# Redis Configuration (Render will provide these)
REDIS_CLIENT=phpredis
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}

# Email Configuration (Optional - for notifications)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="libraflow@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security and Performance
BCRYPT_ROUNDS=12
LOG_LEVEL=error
LOG_CHANNEL=stack

# Application Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_MAINTENANCE_DRIVER=file

# File System
FILESYSTEM_DISK=local

# Development Flags (set to true only if needed)
SEED_ADMIN_USER=false
SEED_REAL_BOOKS=false
SEED_SYSTEM_SETTINGS=false
